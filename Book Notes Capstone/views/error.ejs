<%- include('partials/header.ejs'); -%>

<div class="container d-flex justify-content-center">
    <div class="library-card">
        <div class="stamp">ERROR</div>
        
        <div class="text-center">
            <div class="library-icon">ðŸ“–</div>
            <h1 class="card-title">Volume Not Found</h1>
        </div>
        
        <div class="error-message text-center">
            <p>Our catalog system cannot locate the requested page.</p>
            <p class="lead"><em>"<%= message %>"</em></p>
            <p>Please consult our librarian for assistance.</p>
        </div>
        
        <div class="due-date">
            Error logged: <%= new Date().toLocaleString() %>
        </div>
        
        <% if (error && error.stack) { %>
            <div class="error-details">
                <h5>Catalog Details:</h5>
                <pre class="mt-3"><%= error.stack %></pre>
            </div>
        <% } %>
        
        <div class="text-center">
            <a href="/" class="btn btn-library">
                <i class="fas fa-book-open me-2"></i>Return to Collection
            </a>
        </div>
    </div>
</div>
