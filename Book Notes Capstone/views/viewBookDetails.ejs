<%- include('partials/header.ejs'); -%>
<%- include('partials/navbar.ejs'); -%>

<div class="hero-section note px-4 pb-5 mb-5 text-center book-detail" style="background-image: url('https://images.unsplash.com/photo-1528207776546-365bb710ee93');">
</div>

  <div class="container py-5">
    <div class="card shadow book-card book-card--detail">
      <div class="row g-0 align-items-center">
        
        <div class="col-md-5">
          <img src="https://images.unsplash.com/photo-1528207776546-365bb710ee93" 
               alt="Book Cover" 
               class="img-fluid rounded-start book-cover">
        </div>
  
        <div class="col-md-7">
          <div class="card-body">
            <h2 class="fw-bold">Atomic Habits</h2>
            <h5 class="text-muted mb-3">James Clear</h5>
  
            <div class="mb-3">
              <strong>Started:</strong> Jan 10, 2025<br>
              <strong>Finished:</strong> Jan 22, 2025
            </div>
  
            <div class="notes-section mb-3">
              <h6 class="fw-semibold">Notes:</h6>
              <p>
                - Identity-based habits.<br>
                - Small improvements daily.<br>
                - Long-term compounding.
              </p>
            </div>

            <!-- Progress Section -->
            <div class="my-4">
              <h5 class="fw-semibold">Reading Progress</h5>
              <div class="progress" role="progressbar" aria-label="Reading progress" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar bg-success" style="width: 60%;">60%</div>
              </div>
            </div>
  
            <div class="mb-3">
              <h6 class="fw-semibold">Rating:</h6>
              <span class="rating-stars">⭐⭐⭐⭐☆ 4.5</span>
            </div>
  
            <a href="/books" class="btn btn-outline-primary">← Back</a>
          </div>
        </div>
  
      </div>
    </div>
  </div>
  <%- include('partials/footer.ejs'); -%>